@{
    ViewData["Title"] = "Home";
    Layout = "_MainLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Meal Query</title>
    <link rel="stylesheet" href="~/css/addMeal.css">
    <style>
        .meal-name, .ingredient-box {
            margin: 0px 10px;
        }

        label {
            display: block;
            margin-bottom: 10px;
        }

        .ingredient-selection #ingredient-box, .ingredient-selection input[type="number"] {
            margin: 0px 10px;
            gap: 10px;
        }
    </style>
</head>
<body>
    <main>
        <h4>
            Create a new meal by entering the meal name and adding ingredients with their quantities.
        </h4>

        <form id="mealForm">
            <div class="meal-name">
                <label for="mealName">Meal Name:</label>
                <input type="text" id="mealName" name="mealName" required>
            </div>

            <div class="ingredient-selection">
                <div class="ingredient-box">
                    <label for="ingredientSelect">Choose Ingredient:</label>
                    <select id="ingredientSelect">
                        <option value="">Please Select</option>
                    </select>
                </div>
                <label for="ingredientQuantity">Quantity:</label>
                <input type="number" id="ingredientQuantity" name="ingredientQuantity" min="0.25" step="0.25">
            </div>

            <div class="ingredient-list">
                <h4>Selected Ingredients:</h4>
                <ul id="ingredientList"></ul>
            </div>

            <div class="form-actions">
                <button type="button" id="addIngToMealBtn">Add Ingredient to Meal</button>
                <button type="submit" id="saveMealBtn">Save Meal</button>
            </div>
        </form>
    </main>

    <script src="~/js/addMeal.js"></script>
</body>
</html>
