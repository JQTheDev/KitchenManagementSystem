
<div id="ingredientModal" class="modal" style="display:none;">
    <div class="modal-content">
        <span class="close-button">xxx</span>
        <h3>Add/Update an Ingredient</h3>
        
        <form id="addIngredientForm">
            <!-- Input fields for the form -->
            <input type="hidden" id="ingredientId" value="">

            <label for="name">Ingredient Name:</label>
            <input type="text" id="name" required>

            <label for="calories">Calories(g):</label>
            <input type="number" id="calories" >

            <label for="salt">Salt(g):</label>
            <input type="number" id="salt" step="0.01">

            <label for="fat">Fat(g):</label>
            <input type="number" id="fat" step="0.01">

            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" required>

            <input type="submit" value="Submit">
        </form>
    </div>
    <style>
        #addIngredientForm label,
        #addIngredientForm input {
            display: block; /* makes each element take up the full width */
            margin-bottom: 10px;
        }

        #addIngredientForm input
        {
            width: 100%; 
            padding: 8px; 
            box-sizing: border-box; /* Ensures padding doesn't affect overall width */
        }

        .modal-content {
            
            width: 400px; 
            margin: auto; 
            padding: 20px; 
            background-color: tan;
        }
    </style>
    <script>
        async function CreateIngredient(event) {
            event.preventDefault();
            const ingredientId = document.getElementById('ingredientId').value;
            let endpoint = "https://localhost:44342/api/Ingredients";
            let method = 'POST'; // Default to adding a new ingredient

            const ingredient = {
                // Your existing ingredient fields
            };

            // Adjust endpoint and method if updating an ingredient
            if (ingredientId) {
                endpoint += `/${ingredientId}`;
                method = 'PUT';
            }

            fetch(endpoint, {
                method: method,
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(ingredient)
            })
            .then(response => {
                if (response.ok) {
                    alert(ingredientId ? "Ingredient Update Successful" : "Ingredient Creation Successful");
                    document.getElementById('ingredientId').value = ''; // Reset the hidden field
                    // Reset other fields here as well
                    document.getElementById('name').value = '';
                    document.getElementById('calories').value = '';
                    document.getElementById('salt').value = '';
                    document.getElementById('fat').value = '';
                    document.getElementById('quantity').value = '';

                } else {
                    alert("Ingredient already exists.");
                }
            })
            .catch(error => {
                alert("Operation unsuccessful", error);
                console.error(error);
            });
        }

    </script>
</div>
